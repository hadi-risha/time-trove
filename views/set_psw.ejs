    <!-- main section -->
    <main class="main-container" style="min-height: 77vh;">
        <div class="container-fluid">
            <div class="row p-0">
                <div class="col-12 m-0 d-flex p-0">
                    <div class="forgot-section">  

                    <!-- set a new password -->
                        <p class="heading">Set a New Password</p>
                        
                        <form action="/set-psw" method="post" class="container" style="margin-left: 30vw;">
                            <input type="hidden" name="email" value="<%= userEmail %>">
                            <input class="password-box" type="password" id="password" name="newPassword" required
                                placeholder="New Password">
                            <input class="confirm-box" type="password" id="confirm-password" name="confirmNewPassword" required
                                placeholder="Confirm New Password">
                                <% if(passwordNotMatch){ %>
                                    <p style="color: red;font-size: 13px;margin-left: 10vw;margin-top: 10px;">New password and Confirm Password not match</p>
                               <% } %>
                               <% if(invalidPassword){ %>
                                <p style="color: red;font-size: 13px;margin-left: 10vw;margin-top: 10px;">Password must contain non-space character</p>
                           <% } %>
                            <button class="confirm-btn" type="submit">Set a New Password</button>    
                        </form> 
                    </div>
                    <!-- /set a new password -->
                </div>
            </div>
        </div>
    </main>
    <!-- /main section  --> 


